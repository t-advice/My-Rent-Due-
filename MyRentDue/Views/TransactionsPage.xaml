<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
x:Class="MyRentDue.Views.TransactionsPage"
Title="Transactions">


    <Grid RowDefinitions="Auto,*" Padding="12">
        <!-- Header -->
        <Frame Grid.Row="0" Padding="16" CornerRadius="18" HasShadow="True">
            <Grid ColumnDefinitions="*,Auto">
                <Label Text="Transactions" FontSize="22" FontAttributes="Bold"/>
                <Button Grid.Column="1" Text="Add" Clicked="OnAddClicked"/>
            </Grid>
        </Frame>


        <!-- List -->
        <CollectionView Grid.Row="1" x:Name="TransactionsList" Margin="0,12,0,0" SelectionMode="Single" SelectionChanged="OnTransactionSelected">
            <CollectionView.EmptyView>
                <VerticalStackLayout Padding="24" Spacing="8" HorizontalOptions="Center" VerticalOptions="Center">
                    <Label Text="No transactions yet" FontSize="18"/>
                    <Label Text="Tap 'Add' to record one." Opacity="0.7"/>
                </VerticalStackLayout>
            </CollectionView.EmptyView>


            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Padding="16" Margin="0,6" CornerRadius="16" HasShadow="True">
                        <VerticalStackLayout Spacing="4">
                            <Label Text="{Binding TenantName}" FontAttributes="Bold" FontSize="16"/>
                            <Label Text="{Binding AmountFormatted}"/>
                            <Label Text="{Binding DateFormatted}" Opacity="0.7"/>
                            <Label Text="{Binding Notes}" Opacity="0.6" FontAttributes="Italic"/>
                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>