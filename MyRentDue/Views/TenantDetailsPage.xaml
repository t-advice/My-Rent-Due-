<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyRentDue.Views.TenantDetailsPage"
             Title="Tenant Details">

    <ScrollView>
        <VerticalStackLayout Padding="16" Spacing="12">
            <Label x:Name="NameLabel" FontSize="20" FontAttributes="Bold"/>
            <Label x:Name="EmailLabel" Opacity="0.8"/>
            <Label x:Name="PhoneLabel" Opacity="0.8"/>

            <Frame Padding="12" CornerRadius="12" HasShadow="True">
                <VerticalStackLayout>
                    <Label Text="Rent summary" FontAttributes="Bold"/>
                    <Label x:Name="RentPerMonthLabel"/>
                    <Label x:Name="AmountPaidLabel"/>
                    <Label x:Name="RemainingLabel" FontAttributes="Bold"/>
                </VerticalStackLayout>
            </Frame>

            <Button Text="Add Payment" Clicked="OnAddPaymentClicked" BackgroundColor="LawnGreen" TextColor="Black"/>

            <Label Text="Transactions" FontAttributes="Bold" Margin="0,8,0,0"/>
            <CollectionView x:Name="TransactionsList">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Padding="10" Margin="0,6" CornerRadius="10" HasShadow="False">
                            <Grid ColumnDefinitions="*,Auto">
                                <VerticalStackLayout>
                                    <Label Text="{Binding DateFormatted}" FontAttributes="Bold"/>
                                    <Label Text="{Binding Notes}" Opacity="0.7"/>
                                </VerticalStackLayout>
                                <Label Text="{Binding AmountFormatted}" HorizontalOptions="End" VerticalOptions="Center"/>
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>