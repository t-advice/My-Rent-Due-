<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyRentDue.Views.AddTenantPage"
             Title="Add Tenant">

    <ScrollView>
        <VerticalStackLayout Padding="16" Spacing="12">

            
            <Frame Padding="16" CornerRadius="18" HasShadow="True">
                <Label Text="Add New Tenant" FontSize="22" FontAttributes="Bold"/>
            </Frame>

            
            <Frame Padding="12" CornerRadius="12" HasShadow="True">
                <Entry x:Name="FirstNameEntry" Placeholder="First Name"/>
            </Frame>

            
            <Frame Padding="12" CornerRadius="12" HasShadow="True">
                <Entry x:Name="LastNameEntry" Placeholder="Last Name"/>
            </Frame>

            
            <Frame Padding="12" CornerRadius="12" HasShadow="True">
                <Entry x:Name="EmailEntry" Placeholder="Email" Keyboard="Email"/>
            </Frame>

           
            <Frame Padding="12" CornerRadius="12" HasShadow="True">
                <Entry x:Name="PhoneEntry" Placeholder="Cell Number" Keyboard="Telephone"/>
            </Frame>

            
            <Frame Padding="12" CornerRadius="12" HasShadow="True">
                <Entry x:Name="RentEntry" Placeholder="Rent per Month (numbers only)" Keyboard="Numeric"/>
            </Frame>

            
            <Button Text="Save Tenant"
                    Clicked="OnSaveTenantClicked"
                    BackgroundColor="#4CAF50"
                    TextColor="White"
                    CornerRadius="12"/>

            
            <Button Text="Generate Contract"
                   
                    BackgroundColor="#2196F3"
                    TextColor="White"
                    CornerRadius="12"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>



