<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
x:Class="MyRentDue.Views.AddTransactionPage"
Title="Add Transaction">
    <ScrollView>
        <VerticalStackLayout Padding="16" Spacing="12">
            <Frame Padding="16" CornerRadius="18" HasShadow="True">
                <VerticalStackLayout Spacing="10">
                    <Label x:Name="TenantLabelHeader" Text="Select Tenant" FontSize="18" FontAttributes="Bold"/>
                    <Picker x:Name="TenantPicker" Title="Choose tenant" />
                </VerticalStackLayout>
            </Frame>


            <Frame Padding="16" CornerRadius="18" HasShadow="True">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Payment details" FontSize="18" FontAttributes="Bold"/>


                    <Entry x:Name="AmountEntry" Placeholder="Amount" Keyboard="Numeric"/>
                    <DatePicker x:Name="DatePicker" />
                    <Entry x:Name="NotesEntry" Placeholder="Notes (optional)"/>
                </VerticalStackLayout>
            </Frame>


            <HorizontalStackLayout Spacing="10" HorizontalOptions="Center">
                <Button x:Name="SaveButton" Text="Save Transaction" Clicked="OnSaveTransactionClicked"/>
                <Button x:Name="DeleteButton" Text="Delete" Clicked="OnDeleteClicked" IsVisible="False" BackgroundColor="Tomato"/>
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>